@model PassionProject_AustinCaron_MVP.Models.ViewModels.DetailsAnime
@{
    ViewBag.Title = "Details";
}

<h1>@Model.SelectedAnime.AnimeName</h1>
<div>
    <h2>Anime Characters:</h2>
    @foreach(var character in Model.RelatedCharacters)
        {
            <a href="/Character/Details/@character.CharacterId"><h3>@character.CharacterName</h3></a>
        }
</div>

