
@model PassionProject_AustinCaron_MVP.Models.AnimeDto
@{
    ViewBag.Title = "Edit";
}

<h2>Update @Model.AnimeName</h2>
<form action="/Anime/Update/@Model.AnimeId" method="POST">
    <div style="display:none;">
        <input type="text" name="AnimeId" value="@Model.AnimeId" />
    </div>
    <div>
        <label>Anime Name:</label>
        <input type="text" name="AnimeName" value="@Model.AnimeName" />
    </div>
    <div>
        <label>Anime Description:</label>
        <input type="text" name="AnimeDescription" value="@Model.AnimeDescription" />
    </div>
    <div>
        <label>Anime Abbreviation:</label>
        <input type="text" name="AnimeAbbr" value="@Model.AnimeAbbr" />
    </div>
    <div>
        <label>Anime Icon:</label>
        <input type="text" name="AnimeName" value="@Model.AnimeIcon" />
    </div>
    <div>
        <label>Anime Background Image:</label>
        <input type="text" name="AnimeName" value="@Model.AnimeBck" />
    </div>
    <div>
        <input type="submit" value="Update Anime" />
    </div>
</form>

