@model PassionProject_AustinCaron_MVP.Models.AnimeDto
@{
    ViewBag.Title = "DeleteConfirm";
}

<h2>Do you want to delete @Model.AnimeName?</h2>
<a href="/Anime/Details/@Model.AnimeId">Back to @Model.AnimeName</a>
<p>@Model.AnimeDescription</p>
<form action="/Anime/Delete/@Model.AnimeId" method="POST">
    <input type="submit" value="Delete" />
</form>

