@model IEnumerable<PassionProject_AustinCaron_MVP.Models.AnimeDto>
@{
    ViewBag.Title = "Anime";
}

<main>
    <div class="anime__wrapper">
        <div class="anime__icons">
            @foreach (var Anime in Model)
            {
             <a href="/Anime/Details/@Anime.AnimeId" class="anime__icon">
               <img src="@Anime.AnimeIcon" alt="Small Clickable Icon of @Anime.AnimeName" />
               <h3>@Anime.AnimeAbbr</h3>
             </a>
            }
        </div>
        <a href="/Anime/New" class="anime__newBtn">Add New <img src="~/Content/Images/chevron-right.svg" alt="Add a New Anime" /></a>
    </div>
</main>
<style>
    .anime__wrapper {
        max-width: 807px;
        margin: 20px auto;
    }

    .anime__icons {
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
        gap: 18px;
    }

    .anime__icon {
        position: relative;
        width: 43%;
        display: flex;
        justify-content: center;
        align-items: center;
        max-width: 210px;
    }

    .anime__icon::after {
        content: '';
        padding-bottom: 100%;
    }

    .anime__icon img {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        object-fit: cover;
        transform: scale(1);
        filter: brightness(0.65);
        border-radius: 20px;
        z-index: -1;
        overflow: hidden;
        transition: transform 0.3s ease;
    }

    .anime__icon {
        font-family: "IBM Plex Sans";
        color: white;
        text-decoration: none;
        font-size: 64px;
        letter-spacing: 3px;
        text-align: center;
        transition: transform 0.3s ease;
        overflow: hidden;
        border-radius: 20px;
    }

    .anime__icon:hover.anime__icon img {
        transform: scale(1.1);
    }

    .anime__newBtn {
        text-decoration: none;
        display: none;
        justify-content: flex-end;
        align-items: center;
        color: white;
        font-family: "IBM Plex Sans", sans-serif;
        font-size: 18px;
        gap: 10px;
        padding-bottom: 6px;
        border-bottom: solid 3px transparent;
        transition: border-bottom 0.3s ease;
        margin-top: 15px;
        margin-right: 24px;
    }

    .anime__newBtn:hover { border-bottom: 3px solid white }

    .anime__newBtn img {
        filter: invert(1);
    }

    @@media screen and (min-width: 810px) {
        .anime__wrapper {
            width: 100%;
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            display: flex;
            flex-direction: column;
            align-items: flex-end;
        }

        .anime__icons {
            gap: 35px;
            overflow-y: auto;
            max-height: 740px;
        }

        .anime__newBtn {
            margin-right: 50px;
            display: flex;
        }
    }
</style>