@model PassionProject_AustinCaron_MVP.Models.CharacterDto
@{
    ViewBag.Title = "DeleteConfirm";
}

<h2>Do you want to delete @Model.CharacterName ?</h2>
<a href="/Character/Details/@Model.CharacterId">Back to @Model.CharacterName</a>
<p>@Model.CharacterBio</p>
<form action="/Character/Delete/@Model.CharacterId" method="POST">
    <input type="submit" value="Delete" />
</form>

